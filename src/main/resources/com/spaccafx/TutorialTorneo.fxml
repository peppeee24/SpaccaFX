                        <AnchorPane prefHeight="200.0" prefWidth="250.0" styleClass="anchor-pane" BorderPane.alignment="CENTER">
                           <children>
                              <Label layoutX="15.0" layoutY="268.0" styleClass="LabelWhite" text="INFORMAZIONI" textFill="WHITE">
                                 <font>
                                    <Font name="System Bold" size="27.0" />
                                 </font>
                              </Label>
                           </children></AnchorPane>
                     </left>
                     <center>
                        <AnchorPane prefHeight="601.0" prefWidth="776.0" BorderPane.alignment="CENTER">
                           <children>
                              <ImageView fx:id="indietro" fitHeight="73.0" fitWidth="67.0" layoutX="14.0" layoutY="520.0" onMouseClicked="#indietro" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../Assets/Game/Environment/indietro.PNG" />
                                 </image>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </ImageView>
                              <Label fx:id="numeroGiocatoriLabel" layoutX="236.0" layoutY="32.0" styleClass="Label" text="PER INIZIARE" textAlignment="CENTER">
                                 <font>
                                    <Font name="System Bold Italic" size="27.0" />
                                 </font></Label>
                              <Text layoutX="81.0" layoutY="133.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Il flow di gioco è identico alla partita, la miodalità torneo è consigliata per un numero di giocatori elevato." wrappingWidth="656.0" />
